@model FDFVANLØSEEKSAMEN.Repository.Models.Bruger
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <label class="text-danger">@ViewBag.message</label>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brugernavn" class="control-label">Brugernavn</label>
                <input asp-for="Brugernavn" class="form-control" />
                <span asp-validation-for="Brugernavn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kodeord" class="control-label"></label>
                <input asp-for="Kodeord" class="form-control" />
                <span asp-validation-for="Kodeord" class="text-danger"></span>
            </div>
<div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
